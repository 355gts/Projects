@model IEnumerable<JoelScottFitness.Common.Models.DiscountCodeViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 title-format">
            DISCOUNT CODES
        </div>
        <div style="clear:both"></div>
    </div>
    <div class="row">

        <p>
            @Html.ActionLink("Create New", "CreateDiscountCode", "Admin", new { @class = "btn btn-default" })
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PercentDiscount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValidFrom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValidTo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PercentDiscount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValidFrom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValidTo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Active, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "UpdateDiscountCode", "Admin", new { discountCodeId = item.Id }, new { @class = "btn btn-default" })
                    </td>
                </tr>
            }

        </table>
        </div>
</div>