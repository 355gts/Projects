@model JoelScottFitness.Common.Models.HallOfFameViewModel

<div class="row hof-title-wrapper-container">
    <div class="hof-title-wrapper">
        <p class="hof-title">@Model.Name</p>
        <p class="hof-title"> @Model.PlanName : @Model.PlanDescription</p>
    </div>
</div>
<div class="row hof-image-wrapper">
    <div class="hof-image" style="background-image:url(@Model.BeforeImagePath)">
        <div class="hof-image-label hof-image-label-left">
            BEFORE
        </div>
    </div>
    <div class="hof-image" style="background-image:url(@Model.AfterImagePath)">
        <div class="hof-image-label hof-image-label-right">
            AFTER
        </div>
    </div>
    <div style="clear:both"></div>
    <div class="col-xs-12 col-sm-10 col-md-6 col-sm-offset-1 col-md-offset-3 ">
        <p class="hof-comment">@Model.Comment</p>
    </div>
</div>
<hr />
