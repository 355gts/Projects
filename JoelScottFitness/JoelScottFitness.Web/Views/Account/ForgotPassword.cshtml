@model JoelScottFitness.Web.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}
<div class="container" style="font-family: 'Bebas-Neue';">
    <div class="row col-xs-12 title-format" style="margin:0px">
        RESET PASSWORD
        <div style="clear:both"></div>
    </div>
    <div style="clear:both"></div>
    <div class="row col-xs-12 login-container" style="height:auto;">
        <div class="login-option-container" style="height:auto;">
            <div class="col-xs-12">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div>
                        <div class="login-section">
                            <div>
                                <label class="control-label" style="text-align:left">Email Address</label>
                            </div>

                            <div>
                                @Html.TextBoxFor(m => m.Email, new { @class = "login-section-textbox", id = "emailAddress" })
                                @Html.ValidationMessageFor(m => m.Email, "")
                            </div>
                        </div>
                        <div style="clear:both"></div>
                    </div>

                        <div style="text-align:left;padding-top:20px;">
                            <input id="resetPassword" type="submit" value="Reset" class="btn btn-default basket-next-button basket-button" style="width:100%;font-size:18px" />
                        </div>

                
            </div>

        </div><div class="col-xs-12">
    <div style="text-align:center"><p id="resetPasswordConfirmation"></p></div>
</div>
    </div>
</div>
