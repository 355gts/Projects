@model JoelScottFitness.Common.Models.ConfirmPurchaseViewModel

@{
    ViewBag.Title = "ConfirmPurchase";
}

<div class="container page-container">
    <div class="row">
        <div class="col-xs-12 title-format">
            CONFIRM PURCHASE
        </div>
        <div style="clear:both"></div>
    </div>

    @using (Html.BeginForm("ConfirmPurchase", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.HiddenFor(model => model.CustomerDetails.UserId, new { htmlAttributes = new { @style = "Display:none" } })
            <div class="form-group">
                @Html.LabelFor(model => model.CustomerDetails.Firstname, htmlAttributes: new { @class = "col-md-2", @style = "text-align:right" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.CustomerDetails.Firstname, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CustomerDetails.Surname, htmlAttributes: new { @class = "col-md-2", @style = "text-align:right" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.CustomerDetails.Surname, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CustomerDetails.BillingAddress.AddressLine1, htmlAttributes: new { @class = "col-md-2", @style = "text-align:right" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.CustomerDetails.BillingAddress.AddressLine1, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CustomerDetails.BillingAddress.AddressLine2, htmlAttributes: new { @class = "col-md-2", @style = "text-align:right" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.CustomerDetails.BillingAddress.AddressLine2, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CustomerDetails.BillingAddress.AddressLine3, htmlAttributes: new { @class = "col-md-2", @style = "text-align:right" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.CustomerDetails.BillingAddress.AddressLine3, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CustomerDetails.BillingAddress.City, htmlAttributes: new { @class = "col-md-2", @style = "text-align:right" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.CustomerDetails.BillingAddress.City, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CustomerDetails.BillingAddress.Region, htmlAttributes: new { @class = "col-md-2", @style = "text-align:right" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.CustomerDetails.BillingAddress.Region, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CustomerDetails.BillingAddress.PostCode, htmlAttributes: new { @class = "col-md-2", @style = "text-align:right" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.CustomerDetails.BillingAddress.PostCode, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CustomerDetails.BillingAddress.Country, htmlAttributes: new { @class = "col-md-2", @style = "text-align:right" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.CustomerDetails.BillingAddress.Country, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CustomerDetails.EmailAddress, htmlAttributes: new { @class = "col-md-2", @style = "text-align:right" })
                <div class="col-md-10">
                    @Html.DisplayTextFor(model => model.CustomerDetails.EmailAddress)
                </div>
            </div>
            
            <div class="basket" style="padding-top:40px">
                @{

                    <div id="no-items" class="row col-xs-12" style="margin:0px;display:none">
                        <div class="more-link-wrapper" style="padding-top:120px;padding-bottom:120px">
                            NO ITEMS IN BASKET
                        </div>
                    </div>

                    <div id="basket-wrapper">
                        <div class="row hidden-xs visible-sm visible-md visible-lg">
                            <div class="col-sm-2">Plan</div>
                            <div class="col-sm-4">Description</div>
                            <div class="col-sm-3" style="text-align:center;padding-right:30px">Quantity</div>
                            <div class="col-sm-2" style="text-align:center">Price</div>
                            <div class="col-sm-1"></div>
                        </div>

                        @{
                            var itemCount = 0;

                            foreach (var planOption in Model.BasketItems)
                            {
                                <div id="basket-item-row-@itemCount" class="row basket-item-row">
                                    <div class="col-xs-6 hidden-sm hidden-md hidden-lg">Plan:</div>
                                    <div class="col-xs-12 col-sm-2">@Html.TextBoxFor(s => planOption.Plan.Name, new { @readonly = true, @class = "basket-value" })</div>
                                    <div class="col-xs-12 hidden-sm hidden-md hidden-lg">Description:</div>
                                    <div class="col-xs-12 col-sm-4">@Html.TextBoxFor(s => planOption.Description, new { @readonly = true, @class = "basket-value" })</div>
                                    <div class="col-xs-12 hidden-sm hidden-md hidden-lg">Quantity:</div>
                                    <div class="row col-xs-12 col-sm-3 basket-button-spacing" style="display:inline-block;text-align:center;position:relative;padding-left:30px;">
                                        <label class="basket-value" id="basket-item-quantity-@itemCount" style="text-align:center;width:auto;padding-left:10px;padding-right:10px;">@planOption.Quantity</label>
                                    </div>
                                    <div class="col-xs-6 hidden-sm hidden-md hidden-lg">Price:</div>
                                    <div class="col-xs-6 col-sm-2">@Html.TextBoxFor(s => planOption.Price, "{0:£0.00}", new { @readonly = true, @class = "basket-value basket-value-price" })</div>

                                </div>

                                itemCount++;
                            }
                        }

                        <div class="row" style="padding-top:20px">
                            <div class="col-sm-9 hidden-xs visible-sm visible-md visible-lg" style="text-align:right">Total:</div>
                            <div class="col-xs-6 visible-xs hidden-sm hidden-md hidden-lg" style="text-align:left">Total:</div>
                            <div id="basket-total" class="col-xs-6 col-sm-2 basket-value-total"></div>
                        </div>
                    </div>

                }

            </div>

            <div class="form-group">
                <div class="row basket-next-button-wrapper" style="padding-top:10px">
                    <input type="submit" value="Confirm Purchase" class="btn btn-default basket-next-button basket-button" />
                </div>
            </div>
        </div>
    }

</div>