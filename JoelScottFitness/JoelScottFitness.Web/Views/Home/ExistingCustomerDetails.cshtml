                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.JoinMailingList, new { @checked = "checked", @style = "margin-left:0px" })
                    @Html.ValidationMessageFor(model => model.JoinMailingList, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Next" class="btn btn-default" />
            </div>
        </div>
