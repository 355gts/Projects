@model JoelScottFitness.Common.Models.IndexViewModel
@using System.Text;

@{
    ViewBag.Title = "Home Page";
}

<div class="row" style="margin:20px;vertical-align:bottom">
    <div class="col-xs-12 col-sm-6 col-md-offset-1 col-md-5 col-lg-offset-2 col-lg-4 text-nowrap" style="font-family:'Bebas Neue';font-size:100px;margin-top:0;padding-top:0;">
        WELCOME TO
    </div>
    <div class="col-xs-12 col-sm-6 col-md-5 col-lg-4 text-nowrap home-row home-logo" style="vertical-align:bottom">
        <img style="width:440px;" src="~/Content/Logos/jsf-black.svg" />
    </div>
    <div style="clear:both"></div>
</div>
<div class="row" style="padding: 0px 20px;">
    <div class="col-xs-12">
        <p>
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent maximus pretium ante id elementum. Etiam sit amet dapibus purus. Curabitur posuere dui vel porta aliquet. Etiam commodo dolor ligula, in tempor ante eleifend eget. Aliquam erat volutpat. Ut euismod porttitor leo. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. Pellentesque tempor nisi nec lobortis rhoncus. In molestie purus eget tristique consequat.
        </p>
    </div>

    <div style="clear:both"></div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="believe-achieve-logo-wrapper">
            <div class="believe-achieve-logo believe-achieve-logo-bottom-center" style="padding-bottom:20px;">
                <img src="~/Content/Logos/believe-achieve-black.svg" />
            </div>
        </div>
    </div>
</div>

<div class="sectContainer">
    <div class="sect sect1" style="z-index:-10">
    </div>
    <div class="subSect">
        <div class="container" style="padding-top:30px;">
            <div id="media" class="row col-xs-12 section-title">
                <div class="home-row home-welcome" style="font-family:'Bebas Neue';font-size:100px;line-height:1;margin-top:0;padding-top:0;padding-right:20px;display:inline-block">
                    MEDIA
                </div>
            </div>

            <div class="row">
                <ul style="list-style:none">
                    @{ 
                        var videoCount = 0;

                        foreach (var video in Model.Videos)
                        {
                            string pull = string.Empty;
                            string push = string.Empty;

                            if (videoCount % 2 == 0)
                            {
                                pull = "col-sm-pull-6";
                                push = "col-sm-push-6";
                            }

                            <li>
                            <div class="col-xs-12 col-sm-6">
                                <div class="video-container">
                                    <iframe frameborder="0" allowfullscreen src=@string.Format("https://www.youtube.com/embed/{0}", @video.VideoId)> </iframe>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <p>@video.Description</p>
                            </div>

                                <div class="clearfix"></div>
                            </li>

                            videoCount++;
                        }
                    }
                </ul>
                <div style="clear:both"></div>
            </div>
            <div class="row col-xs-12">
                <div class="more-link-wrapper">
                    <a href="/Home/Media" class="more-link">MORE</a>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
<div class="sect sect2">
</div>
<div id="plans" class="subSect">
    <div class="container" style="padding-top:30px;">
        <div class="row col-xs-12 section-title">
            <div class="home-row home-welcome" style="font-family:'Bebas Neue';font-size:100px;line-height:1;margin-top:0;padding-top:0;padding-right:20px;display:inline-block;">
                PLANS
            </div>
        </div>
        <div class="row col-xs-12 plan-row-container">
            <div class="plan-index-container">
                <a href=@Url.Action("Plans", "Home", new { gender = "Female" }, Request.Url.Scheme) class="plan-index-link">
                    <div class="plan-index-image" style="background-image: url('../../Content/Images/ladies3.jpg');">
                        <div class="plan-index-title">
                            FOR HER
                        </div>
                    </div>
                </a>
            </div>
            <div class="plan-index-container">
                <a href=@Url.Action("Plans", "Home", new { gender = "Male" }, Request.Url.Scheme) style="text-decoration:none">
                    <div class="plan-index-image" style="background-image: url('../../Content/Images/mens1.jpg');">
                        <div class="plan-index-title">
                            FOR HIM
                        </div>
                    </div>
                </a>
            </div>
            <div style="clear:both"></div>
        </div>
    </div>
    <div class="sect sect3"></div>
    <div class="subSect">
        <div class="container" style="padding-top:30px;">
            <div class="row">
                <div class="col-xs-12 title-format">
                    BLOG
                </div>
                <div style="clear:both"></div>
            </div>
            <div class="row">
                <div class="col-xs-12 blog-row-container">
                    @{
                        if (Model.Blogs.Any())
                        {
                            int blogCount = 0;

                            foreach (var blog in Model.Blogs)
                            {
                                if (blogCount % 2 == 0)
                                {
                                    ViewBag.blogAlternate = "blog-alternate-black";
                                }
                                else
                                {
                                    ViewBag.blogAlternate = "blog-alternate-white";
                                }
                                <div class="blog-container content-format">
                                    <a class="blog-link" onclick="getBlog(@blog.Id)">
                                        <div class="blog-image" style="background-image:url('@blog.ImagePath');">
                                            <div class="blog-title @ViewBag.blogAlternate">@blog.Title</div>
                                            <div class="blog-date @ViewBag.blogAlternate"><span style="font-size:30px;">@blog.CreatedDate.ToString("dd")</span><br />@blog.CreatedDate.ToString("MMM")</div>
                                        </div>
                                        <div style="clear:both"></div>
                                    </a>
                                </div>

                                blogCount++;
                            }
                        }
                        else
                        {
                            <div class="col-xs-12" style="text-align:center; font-family:'Bebas Neue';font-size:20px;line-height:1;margin-top:0;padding-top:0;padding-right:20px;display:inline-block">Not Available</div>
                        }
                    }
                </div>
                <div style="clear:both"></div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="more-link-wrapper">
                        <a href="/Home/Blogs" class="more-link">MORE</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
